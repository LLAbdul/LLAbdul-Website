{
  "compilerOptions": {
    "target": "es2016", /* Set the JavaScript language version */
    "module": "commonjs", /* Use CommonJS for Node.js */
    "rootDir": "./", /* Specify the root directory for source files */
    "outDir": "./dist", /* Specify the output directory for compiled files */
    "esModuleInterop": true, /* Enable compatibility with CommonJS */
    "forceConsistentCasingInFileNames": true,
    "strict": false, /* Enable all strict type-checking options */
    "skipLibCheck": true, /* Skip type checking all .d.ts files */
    "typeRoots": ["./node_modules/@types"] /* Specify where to look for type definitions */
  },
  "include": [
    "api/**/*.ts"
  ], /* Include files in the 'api' folder */
  "exclude": [
    "node_modules",
    "dist"
  ] /* Exclude unnecessary folders */
}